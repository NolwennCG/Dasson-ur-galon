<lg>
<l><seg type="signes_diacritiques"><choice><orig>É</orig><reg>E</reg></choice></seg>m s<seg type="nasalisation"><choice><orig>on</orig><reg>oñ</reg></choice></seg>j <seg type="signes_diacritiques"><choice><orig>é</orig><reg>e</reg></choice></seg><seg type="trigramme_diacritique"><choice><orig>h</orig><reg>c’h</reg></choice></seg> o<seg type="trigramme_diacritique"><choice><orig>h</orig><reg>c’h</reg></choice></seg> chomet, amz<seg type="signes_diacritiques"><choice><orig>é</orig><reg>e</reg></choice></seg>r m<seg type="amenuisement_voyelle"><choice><orig>e</orig><reg>a</reg></choice></seg> yaouankiz,</l>
<l>Gol<seg type="diphtongaison"><choice><orig>ei</orig><reg>oe</reg></choice></seg>t a voked<seg type="diphtongaison"><choice><orig>eu</orig><reg>où</reg></choice></seg>, </l>
<l><pc type="elision"><choice><reg>‘</reg></choice></pc><seg type="signes_diacritiques"><choice><orig>È</orig><reg>E</reg></choice></seg>l ur <seg type="mutation_consonantique"><choice><orig>v</orig><reg>w</reg></choice></seg>erj<seg type="signes_diacritiques"><choice><orig>é</orig><reg>e</reg></choice></seg>
<note n="1" resp="NC"><hi rend="i">gwerje</hi>, <hi rend="i">gwerjez</hi>, gall. : <hi rend="i">verger </hi>(Ménard, 2016,). Restitution de la graphie <hi rend="i">w.</hi></note> <seg type="signes_diacritiques"><choice><orig>é</orig><reg>e</reg></choice></seg> bl<seg type="nasalisation"><choice><orig>eu</orig><reg>euñ</reg></choice></seg><seg type="amuissement_consonne"><choice><reg>v</reg></choice></seg>. </l>
<l><pc type="elision"><choice><reg>‘</reg></choice></pc>Ar m<seg type="amenuisement_voyelle"><choice><orig>e</orig><reg>a</reg></choice></seg><seg type="amuissement_consonne"><choice><orig>n</orig></choice></seg> d<seg type="signes_diacritiques"><choice><orig>é</orig><reg>e</reg></choice></seg>i<seg type="amuissement_consonne"><choice><reg>z</reg></choice></seg><seg type="diphtongaison"><choice><orig>eu</orig><reg>ioù</reg></choice></seg> ho p<seg type="digramme_diacritique"><choice><orig>e</orig><reg>eu</reg></choice></seg>s skui<seg type="consonne_palatalisée"><choice><orig>ll</orig><reg>lh</reg></choice></seg>et frond<seg type="diphtongaison"><choice><orig>eu</orig><reg>où</reg></choice></seg> iski<seg type="voisement"><choice><orig>z</orig><reg>s</reg></choice></seg>, </l>
<l>Ha dasson ho sonenn</l>
<l><seg type="amenuisement_voyelle"><choice><orig>E</orig><reg>A</reg></choice></seg> son <seg type="trigramme_diacritique"><choice><orig>h</orig><reg>c’h</reg></choice></seg>oa<seg type="digramme_diacritique"><choice><orig>h</orig><reg>zh</reg></choice></seg> ʼbar<seg type="digramme_diacritique"><choice><orig>h</orig><reg>zh</reg></choice></seg> m<seg type="amenuisement_voyelle"><choice><orig>e</orig><reg>a</reg></choice></seg> fenn</l>
<l><pc type="elision"><choice><reg>‘</reg></choice></pc><seg type="signes_diacritiques"><choice><orig>È</orig><reg>E</reg></choice></seg>l toni<seg type="diphtongaison"><choice><orig>eu</orig><reg>où</reg></choice></seg> <seg type="amenuisement_voyelle"><choice><orig>e</orig><reg>a</reg></choice></seg>r bini<seg type="diphtongaison"><choice><orig>eu</orig><reg>où</reg></choice></seg>, pell goud<seg type="signes_diacritiques"><choice><orig>é</orig><reg>e</reg></choice></seg> ur chervad
